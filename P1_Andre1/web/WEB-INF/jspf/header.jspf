<%@ page pageEncoding="UTF-8" %>
<%@page import="java.util.*"%>
<%@page import="java.util.ArrayList"%>
<%
    if(request.getParameter("logar")!=null){
        String user = request.getParameter("nome");
        session.setAttribute("nome",user);
        ArrayList<Integer> megaa = new ArrayList<>();
        for(int i=1;i<=6;i++){
        megaa.add((int)(60*Math.random()));
        }
        session.setAttribute("mega", megaa);
        if(application.getAttribute("conter")==null){
            application.setAttribute("conter",1);
        } else {
            int contador = 1;
            application.getAttribute("conter");
            contador++;
            application.setAttribute("conter", contador);
        }
        response.sendRedirect(request.getRequestURI());
 }
    else if (request.getParameter("deslogar")!=null){
        session.removeAttribute("nome");
         if(application.getAttribute("conter")==null){
            application.setAttribute("conter",1);
        } else {
            int contador = 1;
            application.getAttribute("conter");
            contador--;
            application.setAttribute("conter", contador);
        }
      response.sendRedirect(request.getRequestURI());
    }
     String usuario = (String) session.getAttribute("nome");
    %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="index.jsp">Andr√© Luis - P1</a>
