      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="index.jsp">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="andre-dica-mega-sena.jsp">Mega-Sena</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="andre.jsp">Sobre</a>
        </li>
      </ul>
      <form class="d-flex">
          <%if (usuario ==null){%> 
        <input class="form-control me-2" type="text" name="nome" placeholder="Login" aria-label="Logar">
        <button class="btn btn-dark btn-rounded" name="logar" type="submit">Logar</button>
        <%} else{ %>
        <li class="nav-item">
        Bem vindo! <%=usuario%>
        </li>
        <button class="btn btn-dark btn-rounded" name="deslogar" type="submit">Deslogar</button>
      <%}%>
      </form>
    </div>
  </div>
</nav>